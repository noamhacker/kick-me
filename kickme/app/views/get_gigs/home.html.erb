<script>
    embedString= "<iframe src='" + window.location.href + "/noam-hacker' width='360' height='660'></iframe>";
    $('#embedArea').append(embedString);
    function update() {
        username = $('#username').val()
        $('#embedArea').empty()
        url = window.location.href
        if (url.slice(-1) == '/')
            url = url.slice(0,-1)
        embedString = "<iframe src='" + url + "/" + username + "' width='360' height='660'></iframe>";
        $('#embedArea').append(embedString);
    }
    function getCode() {
        username = $('#username').val()
        url = window.location.href
        if (url.slice(-1) == '/')
            url = url.slice(0,-1)
        embedString = "<iframe src='" + url + "/" + username + "' width='360' height='660'></iframe>";
        $('#codeArea').val(embedString)
        $('.code').show();
        var clipboard = new Clipboard('.copyButton');
    }
</script>
